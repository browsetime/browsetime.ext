{
    "name": "BrowseTime",
    "description": "Track and visualise time spend on websites",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "alarms",
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "background"
    ],
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
}